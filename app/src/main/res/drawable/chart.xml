<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BACKGROUND CARD -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B7D4F6"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

