<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/topCircle"
            android:layout_width="260dp"
            android:layout_height="220dp"
            android:src="@drawable/lingkaran_biru_tua"
            android:translationX="-80dp"
            android:translationY="-100dp"
            android:alpha="0.9" />

        <LinearLayout
            android:id="@+id/headerArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang,"
                    android:textColor="#757575"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, User!!"
                    android:textSize="26sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/imgProfileHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/headerArea"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FAFAFA">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp" />
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:id="@+id/menuGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardContainer"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/menuCatatan"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_edit" app:tint="#0D47A1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Catatan" android:textStyle="bold" android:textColor="#555555" android:layout_marginTop="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/menuTugas"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_tugas" app:tint="#0D47A1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tugas" android:textStyle="bold" android:textColor="#555555" android:layout_marginTop="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/menuRiwayat"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_history" app:tint="#0D47A1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Riwayat" android:textStyle="bold" android:textColor="#555555" android:layout_marginTop="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/menuPrediksi"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_alarm" app:tint="#0D47A1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Prediksi" android:textStyle="bold" android:textColor="#555555" android:layout_marginTop="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@id/menuGrid"
            android:layout_alignParentEnd="true"
            android:src="@drawable/lingkaran_biru_muda"
            android:alpha="0.4"
            android:translationX="60dp"
            android:translationY="20dp" />

    </RelativeLayout>
</ScrollView>