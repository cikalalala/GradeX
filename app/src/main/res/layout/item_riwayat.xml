<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/primary_blue_dark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtMapelRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btnViewRiwayat"
                android:text="Prediksi Nilai Bahasa Indonesia"
                android:textColor="@color/primary_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTanggalRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMapelRiwayat"
                android:layout_marginTop="8dp"
                android:text="30 Desember 2025"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btnViewRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/txtTanggalRiwayat"
                android:padding="10dp"
                android:text="VIEW"
                android:textColor="@color/primary_blue_dark"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/btnDeleteRiwayat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@id/btnViewRiwayat"
                android:layout_alignBottom="@id/btnViewRiwayat"
                android:padding="10dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                android:clickable="true"
                android:focusable="true"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
