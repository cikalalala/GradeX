<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/lingkaran_biru_tua"
        android:translationY="-350dp" />

    <LinearLayout
        android:id="@+id/blueCircle2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:background="@drawable/lingkaran_biru_muda">

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="215dp"
            android:gravity="center"
            android:background="@drawable/lingkaran_putih">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/book_icon"
                android:adjustViewBounds="true" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/titleOnboard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blueCircle2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="Catat Materi Lebih Rapi dan Terstruktur"
        android:textColor="#1E63D7"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/descOnboard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleOnboard2"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="40dp"
        android:text="Simpan ringkasan dan poin penting tiap mata pelajaran agar belajar lebih rapi dan terarah."
        android:textColor="#555555"
        android:textSize="14sp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/dotIndicator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnNext2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/dot_inactive" android:layout_marginEnd="12dp" />
        <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/dot_active" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:text="Mulai Sekarang"
        android:backgroundTint="#1E63D7"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>