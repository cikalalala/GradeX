<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER BIRU MELENGKUNG -->
    <ImageView
        android:id="@+id/topCircle"
        android:layout_width="334dp"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/lingkaran_biru_tua"
        android:translationX="-150dp"
        android:translationY="-150dp" />

    <!-- TEKS GREETING -->
    <TextView
        android:id="@+id/txtGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true" />

    <!-- CARD GRAFIK -->
    <LinearLayout
        android:id="@+id/chartCard"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="#D9E9FF"
        android:padding="12dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/chartImage"
            android:layout_width="290dp"
            android:layout_height="160dp"
            android:src="@drawable/chart"
            android:scaleType="fitXY" />
    </LinearLayout>

    <!-- GARIS BIRU -->
    <View
        android:id="@+id/blueLine"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:layout_below="@id/chartCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/garis_biru" />

    <!-- MENU 4 KOLOM -->
    <GridLayout
        android:id="@+id/menuGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blueLine"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="20dp"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="20dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:gravity="center">

        <!-- CATATAN -->
        <LinearLayout
            android:id="@+id/menuCatatan"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_menu">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_catatan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_catatan"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- TUGAS -->
        <LinearLayout
            android:id="@+id/menuTugas"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_menu">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_tugas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_tugas"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- RIWAYAT -->
        <LinearLayout
            android:id="@+id/menuRiwayat"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_menu">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_riwayat"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- PREDIKSI -->
        <LinearLayout
            android:id="@+id/menuPrediksi"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_menu">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_prediksi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_prediksi"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </GridLayout>

    <!-- NAVBAR -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
