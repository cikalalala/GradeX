<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Mata Pelajaran"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerMapel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etJudulTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Judul Tugas"
        android:inputType="textCapSentences"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etDescTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Deskripsi"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur Waktu Alarm"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvWaktuTerpilih"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Belum diatur"
            android:textColor="#555555" />

        <Button
            android:id="@+id/btnSetJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Jam"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>